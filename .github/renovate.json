{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": ["pip_requirements"],
  "pip_requirements": {
    "fileMatch": [
      "^requirements/.*\\.txt$",
      "base\\.txt$"
    ]
  },
  "packageRules": [
    {
      "matchManagers": ["pip_requirements"],
      "groupName": "all-requirements"
    }
  ],
  "schedule": [
    "on the 15th day of the month at 02:00"
  ]
}
